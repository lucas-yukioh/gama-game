<% if @game.question_number < 10 %>
  <% provide(:title, "Gama Game - Question #{@game.question_number + 1}") %>

  <div class="row justify-content-center mx-0">
    <div class="col-9">
      <h4><%= @question.title %></h4>
    </div>
    <div class="col-2">
      <h4><span class="badge badge-info"><%= @question.category %></span></h4>
    </div>
  </div>
  <%= form_for '', url: next_question_path, method: 'GET' do |f|  %>
    <div class="row justify-content-center mx-0 my-3">
      <div class="col-10 my-2 py-2 pl-5 question-option">
        <input type="radio" class="form-check-input" name="option" value="1"><%= @question.option1 %>
      </div>
      <div class="col-10 my-2 py-2 pl-5 question-option">
        <input type="radio" class="form-check-input" name="option" value="2"><%= @question.option2 %>
      </div>
      <div class="col-10 my-2 py-2 pl-5 question-option">
        <input type="radio" class="form-check-input" name="option" value="3"><%= @question.option3 %>
      </div>
      <div class="col-10 my-2 py-2 pl-5 question-option">
        <input type="radio" class="form-check-input" name="option" value="4"><%= @question.option4 %>
      </div>
    </div>
    <div class="row justify-content-end">
      <div class="col-2">
        <button type="submit" id="btnNext" class="btn btn-lg btn-success mt-3 disabled">
          Next
        </button>
      </div>
    </div>
  <% end %>

  <script type="text/javascript" charset="utf-8">
    $('.form-check-input').click(function() {
        $('#btnNext').removeClass('disabled');
    });
  </script>

<% else %>
  <% provide(:title, "Gama Game - Score") %>

  <div class="row justify-content-center text-center mx-0">
    <div class="col-12">
      <h1 class="mb-5"><strong>Congratulations! You completed the game!</strong></h1>
    </div>
    <div class="col-12">
      <div class="row justify-content-center align-items-center">
        <div class="col-auto pr-0">
          <h4 class="my-0">Your score was</h4>
        </div>
        <div class="col-auto">
          <span class="game-score"><%= @game.score %>/10</span>
        </div>
      </div>
    </div>
    <div class="col-auto">
      <%= link_to create_game_path, class: "btn btn-lg btn-block btn-success mt-5" do %>
        <h2 class="my-0">Start a new game</h2>
      <% end %>
    </div>
  </div>
<% end %>