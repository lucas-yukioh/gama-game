<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "Gama Game" %></title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <%= render 'layouts/header' %>

    <div class="container mt-5">
      <div class="card">
        <div class="card-body my-5">
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
